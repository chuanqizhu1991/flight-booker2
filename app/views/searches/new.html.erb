<h1>Find a flight</h1>

<%= form_with(model: @search, local: true) do |form| %>
  <% if @search.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h2>

      <ul>
      <% @search.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :from %>
    <%= form.select(:from, @location_options) %>
  </div>

  <div class="field">
    <%= form.label :to %>
    <%= form.select(:to, @location_options) %>
  </div>

  <div class="actions">
    <%= form.submit value:"Search"%>
  </div>
<% end %>
